<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="javafxlibrary.testapps.controllers.TestScrollRobot2Controller"
            maxHeight="200.0" maxWidth="200.0"
            onMouseEntered="#setupListeners">

    <VBox AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">
        <ScrollPane fx:id="scrollPane">
            <ImageView fx:id="imageView">
                <Image url="@uiresources/ejlogo.png"/>
            </ImageView>
        </ScrollPane>
    </VBox>
    <VBox>
        <Label fx:id="verticalScrollLocation" text="min" textFill="red"/>
        <Label fx:id="horizontalScrollLocation" text="min" textFill="red"/>
    </VBox>
    <stylesheets>
        <URL value="@css/TestScrollRobot2UI.css"/>
    </stylesheets>
</AnchorPane>
